# ============================================
# F5-TTS Framework - Environment Configuration
# ============================================
# Copy this file to .env and configure as needed

# --- Server Configuration ---
# Server host address
HOST=0.0.0.0

# Server port
PORT=8000

# Enable hot reload (set to false in production)
RELOAD=true

# --- Model Configuration ---
# Default TTS model version to load on startup
# Options: v1, v2
CURRENT_MODEL_VERSION=v2

# --- Path Configuration ---
# Base directory (usually current working directory)
BASE_DIR=.

# Data directory for models, cache, and results
DATA_DIR=./data

# Path to Thai lexicon file
LEXICON_PATH=./data/stations_600.json

# Default reference audio file path
DEFAULT_REF_AUDIO_PATH=./data/reference.wav

# Directory for test results
RESULTS_DIR=./data/test_results

# --- HuggingFace Configuration ---
# HuggingFace cache directory
HF_HOME=./data/hf_cache

# HuggingFace token (optional, for private models)
# HF_TOKEN=your_huggingface_token_here

# --- TTS Generation Default Parameters ---
# Default inference steps (higher = better quality but slower)
DEFAULT_STEPS=32

# Default speed multiplier (1.0 = normal, 0.5 = half speed, 2.0 = double speed)
DEFAULT_SPEED=1.0

# Default classifier-free guidance scale (higher = more stable but less natural)
DEFAULT_CFG=2.0

# Enable text normalization by default
USE_NORM_DEFAULT=true

# Enable auto-split for long texts by default
USE_AUTO_SPLIT_DEFAULT=false

# --- Audio Processing ---
# Fade duration in seconds
FADE_DURATION=0.02

# Silence threshold for trimming (0.0 - 1.0)
SILENCE_THRESHOLD=0.005

# Silence padding in seconds
SILENCE_PADDING=0.02

# --- Pause/Room Tone Settings ---
# Minimum pause duration between segments (seconds)
MIN_PAUSE_DURATION=0.07

# Maximum pause duration between segments (seconds)
MAX_PAUSE_DURATION=0.14

# --- Logging ---
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
